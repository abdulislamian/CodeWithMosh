@model List<CodeWithMosh.Models.Movies>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6"><h2 class="text-primary">Movie List</h2></div>
        <div class="col-6 text-end">
            <a asp-controller="Movies" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Movie
            </a>
        </div>
    </div>



    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th>Genre</th>
                <th scope="col">Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td><a asp-controller="Movies" asp-action="Details" asp-route-Id="@obj.Id">@obj.Name</a></td>
                    <td>@obj.Genre.Name</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Customer" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                                Edit
                            </a>
                            <a asp-controller="Customer" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger ms-2">
                                Delete
                            </a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
